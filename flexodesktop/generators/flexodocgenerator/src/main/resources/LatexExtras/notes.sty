\newcommand{\questionrep}[3][]{
\stepcounter{questnum}
\addcontentsline{lon}{note}{Question
    \thequestnum ~(answered)}
\addtocontents{loq}{\protect\qpresx{\thepage}{\thequestnum}{#3}{#2}}
\begin{quote}
  \marginpar{\raisebox{-18pt}{\small(Q\thequestnum{})}}
